<style>
  .videoResponsive {
    background-color: aqua;
    width: 100%;
    height: 315px;

  }
</style>
<div id="shopify-section-[id]" class="shopify-section videoResponsive">
  {% if section.settings.videoo %}
    <iframe
      width="560"
      height="315"
      src="{{ section.settings.videoo }}"
      title="YouTube video player"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen></iframe>
  {% endif %}
</div>
{% schema %}
  {
    "name": "videoResponsive",
    "tag": "section",
    "class": "videoResponsive",
    "limit": 1,
    "settings": [
      {
        "type": "text",
        "id": "videoo",
        "label": "videoResponsive"
      }
    ],
    "presets": [
      {
        "name": "VideoResponsive",
        "category": "Image"
      }
    ],
    "locales": {
      "es": {
        "title": "video Responsive"
      },
      "en": {
        "title": "video Responsive"
      }
    }

  }
{% endschema %}